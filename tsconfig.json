{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": false,
    "outDir": "lib",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "pretty": true,
    "lib": [
      "es6",
      "es2015",
      "es2017",
      "esnext"
    ],
    "baseUrl": "."
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
